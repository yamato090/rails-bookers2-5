<h1>User info</h1>
<%= form_with model:@user, local: true  do |f| %>
<%= render 'books/error', model: @user %>
  <div>Name</div>
    <%= f.text_field :name %>
  <div>Image</div>
    <%= f.attachment_field :profile_image %>
  <div>Introduction</div>
    <%= f.text_area :introduction %>
  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>