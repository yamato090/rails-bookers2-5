  <% if @model == "book" %>
    <% if books.present? %>
      <table class="table table-sm book-index">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg"%>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td><%= link_to "詳細", book_path(book) %></td>
          </tr>  
          <% end %>
        </tbody>
      </table>
    <% else %>
      <tr><td>・該当の本はありません</td></tr>
    <% end %>
  <% end %>
 